{
  "name": "slendr",
  "version": "0.1.4",
  "description": "Lightweight and responsive slider for modern browsers.",
  "main": "dist/slendr.min.js",
  "scripts": {
    "build:js": "babel src/slendr.js | uglifyjs --stats -vmc > dist/slendr.min.js",
    "xbuild:js": "browserify -t [ babelify ] examples/example.js | uglifyjs --stats -vmc > .tmp/bundle.js",
    "build:css": "node-sass scss/slendr.scss dist/slendr.min.css && cleancss dist/slendr.min.css -do dist/slendr.min.css",
    "watch:js": "watchify -t [ babelify ] examples/example.js -o .tmp/bundle.js -dv",
    "watch:css": "node-sass scss/slendr.scss dist/slendr.min.css -w",
    "build": "npm run build:js & npm run build:css",
    "watch": "npm run watch:css & npm run watch:js",
    "server": "browser-sync start --server '.tmp' --server 'examples' --server 'dist' --port 7001 --files 'examples/{,*/}*.html' --files 'dist/slendr.min.css' --files '.tmp/bundle.js'",
    "dev": "npm run build:css && npm run build:js && npm run xbuild:js && (npm run server & npm run watch)",
    "start": "npm run dev"
  },
  "author": "Jos√© Luis Quintana <https://git.io/joseluisq>",
  "license": "MIT",
  "keywords": [
    "slider",
    "slideshow",
    "html5",
    "lightweight",
    "reponsive",
    "css3",
    "translate3d",
    "commonjs",
    "hardware accelerated"
  ],
  "dependencies": {
    "emitus": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.12.3",
    "browserify": "^13.0.0",
    "clean-css": "^3.4.12",
    "node-sass": "^3.5.3",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": ["es2015"],
    "plugins": [
      "add-module-exports",
      "transform-object-assign"
    ]
  }
}
